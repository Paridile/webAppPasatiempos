<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletPersona</servlet-name>
        <servlet-class>servlets.ServletPersona</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletMascota</servlet-name>
        <servlet-class>servlets.ServletMascota</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletPasatiempo</servlet-name>
        <servlet-class>servlets.ServletPasatiempo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletTipoMascota</servlet-name>
        <servlet-class>servlets.ServletTipoMascota</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletPersonaMascota</servlet-name>
        <servlet-class>servlets.ServletPersonaMascota</servlet-class>
    </servlet>        
    <servlet>
        <servlet-name>ServletPersonaPasatiempo</servlet-name>
        <servlet-class>servlets.ServletPersonaPasatiempo</servlet-class>
    </servlet>     
    <servlet-mapping>
        <servlet-name>ServletPersona</servlet-name>
        <url-pattern>/ServletPersona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletMascota</servlet-name>
        <url-pattern>/ServletMascota</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletPasatiempo</servlet-name>
        <url-pattern>/ServletPasatiempo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletTipoMascota</servlet-name>
        <url-pattern>/ServletTipoMascota</url-pattern>
    </servlet-mapping>    
    <servlet-mapping>
        <servlet-name>ServletPersonaMascota</servlet-name>
        <url-pattern>/ServletPersonaMascota</url-pattern>
    </servlet-mapping> 
    <servlet-mapping>
        <servlet-name>ServletPersonaPasatiempo</servlet-name>
        <url-pattern>/ServletPersonaPasatiempo</url-pattern>
    </servlet-mapping>          
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
